<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:context=".MainActivity$SettingsLegalFragment">

    <TextView
        android:id="@+id/tvSettingTitleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_15dp"
        android:layout_marginStart="@dimen/notification_15dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="@dimen/header" />

    <RelativeLayout
        android:id="@+id/ll_notification_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSettingTitleid"
        android:layout_marginEnd="@dimen/notification_15dp"
        android:layout_marginLeft="@dimen/notification_15dp"
        android:layout_marginRight="@dimen/notification_15dp"
        android:layout_marginStart="@dimen/notification_15dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notifilab_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/enable_safe_mode"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/tg_switch_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sliderbutton"
            android:checked="true"
            android:padding="2dp"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_notification_id"
        android:text="Enter Emergency Contact Number:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/contactLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/primayContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/editIcon"
            android:enabled="false"
            android:text="9036816931"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contactLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/contactLayout1">

        <TextView
            android:id="@+id/secondaryContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/editIcon2"
            android:enabled="false"
            android:text="9036816931"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/editIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_icon" />
    </RelativeLayout>
</RelativeLayout>